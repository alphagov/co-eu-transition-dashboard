{% macro searchMeasures(clearTextButton = false) %}
    <div class="govuk-form-group">
        <div class="govuk-input__wrapper search" id="search">
            <input class="govuk-input govuk-input--width-20 search-input" type="text" name="term" title="Type search term here" placeholder="Search Measures">
            {% if clearTextButton %}
            <div class="govuk-input__suffix clear-search-container" aria-hidden="true">
                <button class="clear-search-button hidden" data-module="govuk-button" type="button" title="Clear search button"><span class="clear-search-icon"></span></button>
            </div>
            {% endif %}
            <div class="govuk-input__suffix search-background" aria-hidden="true">
                <button class="search-button" title="Search button" data-module="govuk-button"><span class="search-icon"></span></button>
            </div>
        </div>
    </div>
{% endmacro %}

{% macro searchMeasuresForm(url, clearTextButton = false) %}
    <form method="GET" action="{{ url }}">
       {{searchMeasures(clearTextButton)}}
    </form>
{% endmacro %}
