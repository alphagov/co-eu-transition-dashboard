{% macro currentStatus(color) %}

{% set style = "govuk-body govuk-!-font-size-14 govuk-!-font-weight-bold govuk-!-display-inline" %}

<span class="govuk-caption-m govuk-!-font-size-14">Current status</span>
{% if color == 'red' %}
    <img src="/assets/images/highrisk-icon.png" class="rayg-img" alt="High risk"/><p class="{{ style }}">HIGH RISK</p>
{% elseif color == 'amber' %}
    <img src="/assets/images/medium-icon.png" class="rayg-img" alt="Medium risk"/><p class="{{ style }}">MEDIUM RISK</p>
{% elseif color == 'yellow' %}
    <img src="/assets/images/lowrisk-icon.png" class="rayg-img" alt="Low risk"/><p class="{{ style }}">LOW RISK</p>
{% elseif color == 'green' %}
    <img src="/assets/images/low-norisk-icon.png" class="rayg-img" alt="Minimal/no risk"/><p class="{{ style }}">MINIMAL/NO RISK</p>  
{% endif %}

{% endmacro %}