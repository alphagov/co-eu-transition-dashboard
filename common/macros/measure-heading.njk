{% from "status.njk" import currentStatus %}

{% macro measureHeading(latestMeasure, raygEntity, updatedAt, isPartOfGroup, isUpdateDue) %}
<table class="govuk-table measures-table">
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th scope="col" class="govuk-table__header">Measure UID</th>
      <th scope="col" class="govuk-table__header">Theme</th>
      {% if not isPartOfGroup %}
        <th scope="col" class="govuk-table__header">Status</th>
      {% endif %}
      <th scope="col" class="govuk-table__header">Last updated</th>
      <th scope="col" class="govuk-table__header">Update due on</th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
    <tr class="govuk-table__row">
      <td class="govuk-table__cell">{{ latestMeasure.metricID }}</td>
      <td class="govuk-table__cell">{{ latestMeasure.theme }}</td>
      {% if not isPartOfGroup %}
        <td class="govuk-table__cell current-status-icon">{{ currentStatus(latestMeasure.colour, false) }}</td>
      {% endif %}
      <td class="govuk-table__cell">{{ updatedAt }}</td>
      <td class="govuk-table__cell {{isUpdateDue}}">{{ latestMeasure.updateDueOn }}</td>
    </tr>
  </tbody>
</table>
{% endmacro %}