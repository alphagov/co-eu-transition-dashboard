{% set checked = false %}
{% for opt in data.filters[filter.id] %}
  {% if opt == option.value %}
    {% set checked = true %}
  {% endif %}
{% endfor %}
{{ govukCheckboxes({
    name: "filters[" + filter.id + "][]",
    items: [
      {
        id: filter.id + "-" + option.value,
        value: option.value,
        text: applyFormatting(filter, option.value) + (" (" + option.count + ")" if option.count else ""),
        checked: checked
      }
    ]
}) }}